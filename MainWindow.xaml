<Window x:Class="Kylosov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kylosov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="City" Margin="10,0,110,10" HorizontalAlignment="Stretch" Height="40" VerticalAlignment="Bottom" Grid.Row="0" FontSize="16px"/>
        <Button Content="Найти" Margin="0,10,10,10" Height="40" Width="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="0" FontSize="16px"/>

        <StackPanel x:Name="Parrent"/>
    </Grid>
</Window>
